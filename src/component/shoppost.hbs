<section class="row mb-3">
    {{#with newsOtherBlock}}
    <h3 class="text-center mb-5">{{title}}</h3>
    {{#each cards}}
    <div class="col-3 gy-2">
        <div class="card text-bg-dark">
            <b class="card-header">{{title}} {{#unless isTop}} <span
                    class="badge text-bg-success rounded pill">Top</span>{{/unless}} {{#if idNew}} <span
                    class="badge text-bg-danger rounded pill">Nova</span>{{/if}}</b>
            <div class="card-body">
                <p>{{description}}</p>
            </div>
        </div>
    </div>
    {{/each}}
    {{/with}}
</section>