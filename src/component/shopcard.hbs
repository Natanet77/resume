<section class="row">
    {{#with goodsOtherBlock}}
    <h3 class="text-center">{{title}}</h3>


    {{#each cards}}

    <div class="col-4 gx-2 gy-4">
        <div class="card">

            <img src="{{image}}">
            <b>{{title}} {{#unless idNew}} <span class="badge text-bg-primary rounded-pill">New</span>{{/unless}}
                {{#if isHot}} <span class="badge text-bg-warning text-uppercase rounded-pill">Hot!</span>{{/if}}</b>
            <p>{{description}}</p>

        </div>
    </div>

    {{/each}}
    {{/with}}

</section>