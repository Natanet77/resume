<div class="card card-body mb-4">

    <div class="card card-body ms-2">

        <b>{{title.userName}}</b>
        <p>{{title.caption}}</p>
        <p>{{title.date}}</p>

        <hr>

        {{#with reviewBody}}
        <p>{{seller.title}}: {{seller.value}}</p>
        <p>{{rating.title}}: {{rating.value}}</p>
        {{#each text}}
        <p>{{this}}</p>
        {{/each}}
        <b>{{advantages.title}}:</b>
        <p>{{advantages.text}}</p>
        <b>{{disadvantages.title}}:</b>
        <p>{{disadvantages.text}}</p>
        <div class="gx-2">
            {{#each images}}
            <img class="me-2" src="{{this}}" alt="photos">
            {{/each}}
        </div>

        {{#each coments}}
        <div class="card p-2 my-3 ms-5">
            <div class="card-body">
                <b>{{userName}}</b>
                <p>{{date}}</p>
                <p>{{text}}</p>
            </div>
        </div>
        {{/each}}

        {{/with}}

    </div>
</div>