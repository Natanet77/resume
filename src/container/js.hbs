<div class="row gy-2 ms-3">
    <div>
        <div class="mt-3">
            <h1>{{name}}</h1>
        </div>
        <div>
            <p>{{description}}</p>
        </div>
        <div>
            {{#with history}}
            <div>Year: {{year}}</div>
            <div>Founder: {{founder}}</div>
            {{/with}}
        </div>
    </div>
    <div>
        <div class="mb-2">
            <b>Types</b>
        </div>
        <ul>
            {{#each types}}
            <div class="pb-2">
                <span class="badge text-bg-primary">{{this}}</span>
            </div>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mb-2"><b>Syntax</b></div>
        <ul>{{#each syntax}}
            <div class="pb-2">
                <span class="badge rounded-pill text-bg-info">{{this}}</span>
            </div>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mb-2"><b>Features</b></div>
        <ul>{{#each features}}
            <div class="pb-2">
                <span class="badge rounded-pill text-bg-info">{{this}}</span>
            </div>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mb-2"><b>Librarieses</b></div>
        <ul>{{#each libraries}}
            <div class="pb-2">
                <span class="badge rounded-pill text-bg-success">{{this}}</span>
            </div>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mb-2"><b>Tools</b></div>
        <ul>{{#each tools}}
            <div class="pb-2">
                <span class="badge rounded-pill text-bg-warning">{{this}}</span>
            </div>
            {{/each}}
        </ul>
    </div>
    <section>
        {{> title data="Community" }}
        <div>

            <ul>
                {{#each community}}
                <div>Name: <button type="button" class="btn btn-link">{{name}}</button></div>
                <div>Type: {{type}}</div>
                {{/each}}
            </ul>

        </div>
    </section>
</div>