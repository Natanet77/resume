<main>
    <div class='card'>
        {{#with navigation}}

        <div class="col-12">
            <div class="nav">
                {{#each links}}
                <div class='nav-item'>
                    <a href="{{href}}" class='nav-link'>{{text}}</a>
                </div>
                {{/each}}

                <div class="nav-item">
                    <a href="{{href}}" class='nav-link disabled'>Disabled</a>
                </div>
            </div>
        </div>

        {{/with}}
    </div>
    <br>
    <hr>

    <section class="row mb-3">
        {{#with newsBlock}}
        <h3 class="text-center mb-5">{{title}}</h3>
        {{#each cards}}
        <div class="col-3 gy-2">
            <div class="card text-bg-dark">
                <b class="card-header">{{title}} {{#unless isNew}} <span
                        class="badge text-bg-success rounded pill">New</span>{{/unless}} {{#if isTop}} <span
                        class="badge text-bg-danger rounded pill">Top</span>{{/if}}</b>
                <div class="card-body">
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </section>

    <br>
    <hr>

    <section class="row">
        {{#with goodsBlock}}
        <div class="nav nav-tabs">
            {{#each tabs}}
            <div class="nav-item">
                <div class="col-12">
                    <li class="nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled {{/if}}">
                        {{text}}
                    </li>
                </div>
            </div>
            {{/each}}
        </div>

        {{#each cards}}

        <div class="col-4 gx-1 gy-4">
            <div class="card">

                <img src="{{image}}">
                <b>{{title}} {{#unless isNew}} <span class="badge text-bg-primary rounded pill">New</span>{{/unless}}
                    {{#if isHot}} <span class="badge text-bg-warning text-uppercase rounded pill">Hot!</span>{{/if}}</b>
                <p>{{description}}</p>

            </div>
        </div>

        {{/each}}
        {{/with}}

    </section>
    <br>
    <hr>

    <section class="row gy-4">
        <div class="col-12">
            {{#with subscribe}}
            <div class="text-light alert alert-dark">
                <h2>{{header}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <div class="flex-column mb-2">
                    <a href="{{link}}" target="_blank" class="btn btn-primary">{{text}}</a>
                </div>

                {{/each}}
            </div>
            {{/with}}
        </div>

    </section>

    <br>
    <hr>

    <section class="row gy-4">
        <div class="col-12">
            {{#with service}}
            <div class="text-light text-center alert alert-success">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <div class="flex-column mb-2">
                    <a href="{{link}}" target="_blank" class="btn btn-primary">{{text}}</a>
                </div>

                {{/each}}
            </div>
            {{/with}}
        </div>

    </section>

    <br>
    <hr>


    <section class='row'>
        <div class="col-12">
            <div class="nav">

                <div class="col-2">
                    {{#each footer.[0]}}
                    <div class="nav-item">
                        <a href="{{link}}" class='nav-link'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>

                <div class="col-2">
                    {{#each footer.[1]}}
                    <div class="nav-item">
                        <a href="{{link}}" class='nav-link'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>

                <div class="col-2">
                    {{#each footer.[2]}}
                    <div class="nav-item">
                        <a href="{{link}}" class='nav-link'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>

                <div class="col-2">
                    {{#each footer.[3]}}
                    <div class="nav-item">
                        <a href="{{link}}" class='nav-link'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>

                <div class="col-2">
                    {{#each footer.[4]}}
                    <div class="nav-item">
                        <a href="{{link}}" class='nav-link'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </section>
</main>