<h1>{{header}}</h1>

<div class="row">
    {{#with contacts_data}}
    <div class=" col-8 gy-3">

        <h2 class="gy-5 mb-4">{{title}}</h2>

        {{#each buttons}}
        {{#if isPrimary}}
        <button class="btn btn-warning me-3">{{text}}</button>
        {{/if}}
        {{#if isOutline}}
        <button class="btn btn-outline-warning">{{text}}</button>
        {{/if}}
        {{/each}}





        {{#with form}}
        <div class="row">
            {{#each input}}
            <div class="col-5 gy-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/each}}
        </div>
        <hr>

        {{#each switch}}
        <div class="col-8 gy-3 mb-3">
            <div class="form-check form-switch">
                <input type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
                <label class="form-check-label">{{text}}</label>
            </div>
        </div>
        {{/each}}
        {{/with}}
        {{/with}}

        <hr>


        {{#with delivery}}
        <h3>{{title}}</h3>

        <div class="card">
            <div class="row">
                {{#each select}}
                <div class="col-5">
                    <label class="form-label ms-3 mt-2">{{label}}</label>
                    <select class="form-select ms-3 mb-2">

                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value={{value}}>{{text}}</option>
                        {{/each}}

                    </select>
                </div>
                {{/each}}
            </div>
        </div>
        <hr>
        {{#each delivery_type}}
        <div class="pt-3 pb-2">
            <div class="form-check">
                <input name="Type" type="radio" class="form-check-input">
                <label class="form-check-label">{{type}}</label>
            </div>
        </div>
        {{/each}}
        <hr>

        {{#with payment}}
        <h3>{{title}}</h3>
        {{#each list}}
        <div class="pt-3 pb-2">
            <div class="form-check">
                <input name="Type" type="radio" class="form-check-input">
                <label class="form-check-label">{{type}}</label>
                {{#if @first}}
                <div class="form-text text-dark">{{description}}</div>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{/with}}
        <hr>


        {{#with contact}}
        <h3>{{title}}</h3>
        <div class="row">
            {{#with surname}}
            <div class="col-5">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
            </div>
            {{/with}}

            {{#with name}}
            <div class="col-5">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
            </div>
            {{/with}}

            {{#with phone}}
            <div class="col-5">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
            </div>
            {{/with}}
            {{#with email}}
            <div class="col-5">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
            </div>
            {{/with}}
        </div>

        {{/with}}



        {{#with coment}}
        <div class="col-12 my-2 mt-3 mb-3">

            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">

        </div>
        {{/with}}


        {{/with}}
        <hr>


        {{#with coupon}}
        <h3>{{title}}</h3>

        <div class="row">
            {{#with select}}
            <div class="col-8">
                {{#with availabel_coupon}}
                <label class="form-label ms-3 mt-2">{{label}}</label>
                <select class="form-select ms-3 mb-2">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value={{value}}>{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}

                {{#with friend_coupon}}
                <label class="form-label ms-3 mt-2">{{label}}</label>
                <select class="form-select form-select-sm ms-3 mb-2">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value={{value}}>{{text}}</option>
                    {{/each}}

                </select>
                {{/with}}
            </div>
            {{/with}}
        </div>

        <div class="row">
            {{#with add}}
            <div class="col-8">
                {{#with friend}}
                <label class="form-label ms-3 mt-2">{{label}}</label>
                <input class="form-control ms-3 mb-2" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
                {{/with}}

                {{#with friend}}
                <label class="form-label ms-3 mt-2">{{label}}</label>
                <input class="form-control form-control-sm ms-3 mb-2" placeholder="{{placeholder}}">
                <div class="form-text text-muted">{{caption}}</div>
                {{/with}}
            </div>
            {{/with}}
        </div>

        {{/with}}

        <hr>

        {{#with quiz}}
        <h3>{{title}}</h3>

        {{#with preference}}
        <p>{{title}}</p>
        {{#each options}}
        <div class="pt-3 pb-2">
            <div class="form-check">
                <input name="Type" type="radio" class="form-check-input">
                <label class="form-check-label">{{this}}</label>
            </div>
        </div>
        {{/each}}
        {{/with}}

        {{#with your_expirience}}
        <label class="form-label pt-3 ms-3 mt-2">{{label}}</label>
        <input class="form-control">
        {{/with}}

        {{#with purchase_frequency}}
        <label class="form-label pt-3 ms-3 mt-2">{{label}}</label>
        <select class="form-select ms-3 mb-2">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value={{value}}>{{text}}</option>
            {{/each}}
        </select>
        {{/with}}


        {{#with factors}}
        <p class="gy-3 mb-2">{{title}}</p>
        {{#each options}}
        <div class="pt-2 pb-1">
            <div class="form-check">
                <label class="form-check-label">{{this}}</label>
                <input name="Type" type="checkbox" class="form-check-input">
            </div>
        </div>
        {{/each}}
        {{/with}}

        {{/with}}
    </div>

    <div class="col-4">
        <div class="card m-2">
            <div class="card-body">
                {{#each action_block}}

                <button class="btn my-1 
            {{#if isSuccess}}btn-success{{/if}} 
            {{#if isDanger}}btn-danger{{/if}}
            {{#if isInfo}}btn-info text-light{{/if}}">
                    {{text}}
                </button>
                {{/each}}
            </div>
        </div>
        <div class="card m-2">
            <div class="card-body">
                {{#with total}}
                <h4>{{title}}</h4>
                {{#each item_list}}
                <div>{{name}}: {{price}}</div>
                {{/each}}
                <hr>
                {{#each additional_info}}
                <div> {{text}}: {{value}}</div>
                {{/each}}
                <hr>

                <div> {{total_price.text}}: {{total_price.value}}</div>
                <hr>
                {{#each button}}
                {{#if isPrimary}}
                <button type="button" class="btn btn-primary btn-sm my-2">{{text}}</button>
                {{/if}}
                {{#if isOutline}}
                <button type="button" class="btn btn-outline-primary btn-sm my-2">{{text}}</button>
                {{/if}}
                {{/each}}

                {{/with}}
            </div>
        </div>
    </div>
</div>

<hr>