<div class="row">
    {{#with formBlock}}
    <div class="col-8">
        <h1 class="mb-3">{{header}}</h1>
        {{#with rating}}
        <p>{{title}}: {{value}}</p>
        {{/with}}

        {{#with actionBlock}}
        <div class="mb-4">
            <ul class="nav nav-tabs mb-4">
                {{#each tabs}}
                <li class="nav-link {{#if @last}} active {{/if}}">{{text}}</li>
                {{/each}}

            </ul>
            <hr>
            {{#with report}}
            <div class="card pb-3">
                <p>{{title}}</p>
                {{#with button}}
                <div class="col-4">
                    <a href="{{link}}" class="btn btn-dark">{{text}}</a>
                </div>
                {{/with}}
            </div>
            {{/with}}
            <hr>
        </div>
        {{/with}}


        {{#with feedbackBlock}}
        <h2>{{title}}</h2>
        <div class="row mt-5">
            {{#each buttons}}
            <div class="col-4 mb-5 pb-3">
                <a class="btn {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}"
                    href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    {{#with goodsInfo}}
    <div class="col-4">
        <div class="card card-body">
            <div class="col-2">
                <img src="{{photo}}" alt="photo">
            </div>
            <p class="mt-3">{{name}}</p>
        </div>
        <br>
        <div class="card card-body">
            <div>{{price}}</div>
            {{#if inMarket}}є в наявності{{/if}}
            {{#each buttons}}
            <div class="pb-2">
                <a href="{{link}}"
                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        <br>
        <div class="card card-body">
            <div>{{seller.title}}: <b>{{seller.value}}</b></div>
        </div>
    </div>
    {{/with}}
    {{/with}}
    <hr>

    {{#each reviewList}}
    {{> reviewItem}}
    {{/each}}


</div>
{{> shopaction}}

<hr>